---
// Optimized Page Component with automatic optimizations
import BaseLayout from '../layouts/BaseLayout.astro';
import { initAllLazyLoading } from '../utils/lazyLoading.js';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  type?: string;
}

const { title, description, canonical, type = "website" } = Astro.props;
---

<BaseLayout 
  title={title}
  description={description}
  canonical={canonical}
  type={type}
>
  <slot />
</BaseLayout>

<script>
  // Initialize lazy loading for this page
  import { initAllLazyLoading } from '../utils/lazyLoading.js';
  initAllLazyLoading();
</script>
