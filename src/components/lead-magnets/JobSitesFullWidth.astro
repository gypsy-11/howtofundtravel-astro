export interface Props {
  formId?: string;
}

const { formId } = Astro.props;
---

<section class="job-sites-fullwidth-section">
  <div class="container">
    <div class="job-sites-content">
      <div class="job-sites-form-container">
        <h2>Get Your Free Remote Work Job Sites Bookmarks</h2>
        <p class="job-sites-description">Skip the crowded job boards! Get instant access to 30+ specialized remote work job sites for digital nomads. Find better opportunities and higher pay.</p>
        
        <div class="job-sites-benefits">
          <p>âœ… 30+ specialized remote job sites</p>
          <p>âœ… Platforms with less competition</p>
          <p>âœ… High-paying remote opportunities</p>
