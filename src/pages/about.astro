<style>
  /* LemonTuesday font is now loaded from local file via main.css */

  /* Hero highlight style - using standard green color */
  .hero .highlight {
    font-family: 'LemonTuesday', 'Shadows Into Light', cursive;
    color: var(--primary-color);
  }

  .story-section {
    padding: 4rem 0;
  }

  .section-intro {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-intro h2 {
    color: #2A9D8F;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .divider {
    width: 60px;
    height: 4px;
    background: linear-gradient(135deg, #2A9D8F 0%, #264653 100%);
    margin: 0 auto;
    border-radius: 2px;
  }

  .story-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    align-items: start;
  }

  .story-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .story-text h3 {
    color: #2A9D8F;
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
  }

  .story-text p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: #495057;
  }

  .about-highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .highlight-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid #2A9D8F;
  }

  .highlight-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .highlight-content h4 {
    color: #2A9D8F;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .highlight-content p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, #2A9D8F 0%, #264653 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  /* Mission Section */
  .mission-section {
    padding: 4rem 0;
    background: #f8f9fa;
  }

  .mission-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    margin-top: 2rem;
  }

  .mission-text p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: #495057;
  }

  .testimonial-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .testimonial {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid #2A9D8F;
    margin: 0;
  }

  .testimonial p {
    font-style: italic;
    margin-bottom: 1rem;
    color: #333;
  }

  .testimonial cite {
    color: #2A9D8F;
    font-weight: 600;
  }



  @media (max-width: 768px) {
    .story-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .section-intro h2 {
      font-size: 2rem;
    }
    
    .mission-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    

    
    .about-highlights {
      grid-template-columns: 1fr;
    }
  }
</style>

