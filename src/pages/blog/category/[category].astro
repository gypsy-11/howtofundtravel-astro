---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ResponsiveImage from '../../../components/ResponsiveImage.astro';

// Get the category from the URL params
const { category: categorySlug } = Astro.params;

// Get all posts and find the matching category
let posts = [];
let category = '';

try {
  posts = await getCollection('blog');
  
  // Find the category that matches the slug
  const allCategories = [...new Set(posts.flatMap(post => post.data.category))];
  category = allCategories.find(cat => 
    cat.toLowerCase().replace(/\s+/g, '-') === categorySlug
  );
  
  if (category) {
    // Filter posts by the found category
    posts = posts.filter(post => post.data.category.includes(category));
  } else {
    // Category not found, redirect to 404
    return Astro.redirect('/404');
  }
} catch (error) {
  console.error('Error fetching posts:', error);
  return Astro.redirect('/404');
}

// Sort posts by published date (newest first)
const sortedPosts = posts.sort((a, b) => new Date(b.data.publishedDate).getTime() - new Date(a.data.publishedDate).getTime());
---

<BaseLayout 
  title={`${category} - Blog | How to Fund Travel`}
  description={`Explore our ${category.toLowerCase()} articles and guides for funding travel and achieving location independence.`}
  canonical={`https://howtofund.travel/blog/category/${category.toLowerCase().replace(/\s+/g, '-')}`}
>
  <!-- Category Header -->
  <section class="blog-header">
    <div class="container">
      <h1><span class="highlight">{category}</span> Articles</h1>
      <p>Discover our latest {category.toLowerCase()} content to help you fund your <span class="highlight">travel dreams</span></p>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="blog-content">
    <div class="container">
      <div class="blog-grid">
        {sortedPosts.map((post) => (
          <article class="blog-card">
            <div class="blog-card-image">
              <a href={`/blog/${post.slug}`} class="blog-card-image-link">
                <ResponsiveImage
                  src={post.data.image || "/images/blog/default-blog-image.jpg"}
                  alt={post.data.title}
                  width="400"
                  height="250"
                  loading="lazy"
                  sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw"
                />
              </a>
            </div>
            <div class="blog-card-content">
              <h2>
                <a href={`/blog/${post.slug}`}>{post.data.title}</a>
              </h2>
              <p>{post.data.description}</p>
              <div class="blog-card-meta">
                <span class="date">
                  {new Date(post.data.publishedDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </span>
                <span class="category">{post.data.category[0]}</span>
              </div>
            </div>
          </article>
        ))}
      </div>
      
      {sortedPosts.length === 0 && (
        <div class="no-posts">
          <h2>No posts found in this category</h2>
          <p>Check back soon for new {category.toLowerCase()} content!</p>
          <a href="/blog/" class="btn btn-primary">View All Posts</a>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
