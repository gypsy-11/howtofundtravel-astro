    color: #666;
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .blog-card-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    color: #888;
  }
  
  .category {
    background: #f0f0f0;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }
  
  .no-posts {
    text-align: center;
    padding: 4rem 0;
  }
  
  .no-posts h2 {
    color: #2A9D8F;
    margin-bottom: 1rem;
  }
  
  .no-posts p {
    color: #666;
    margin-bottom: 2rem;
  }
  
  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }
    
    .blog-header h1 {
      font-size: 2rem;
    }
  }
</style>
